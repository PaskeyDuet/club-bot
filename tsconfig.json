{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "paths": {
      "#root": [
        "./src/*"
      ],
      "#db": [
        "./src/dbSetup/*"
      ],
      "#keyboards": [
        "./src/keyboards/*"
      ],
      "#conv": [
        "./src/conversations/*"
      ],
      "#controllers": [
        "./src/controllers/*"
      ],
      "#serviceMessages": [
        "./src/serviceMessages/*"
      ],
      "#helpers": [
        "./src/helpers/*"
      ],
      "#types": [
        "./src/types/*"
      ],
      "#middleware": [
        "./src/middleware/*"
      ],
      "#handlers": [
        "./src/handlers/*"
      ],
    },
    "typeRoots": [
      "./global.d.ts",
      "./node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules/",
    "dist"
  ],
  "include": [
    "src//**/*",
    "config//*",
  ],
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipLibCheck": true
}